{
  "name": "Download Video",
  "description" : "Finds mp4 Links for you",
  "version": "1.0",
  "manifest_version": 2,
  "page_action": {
    "default_popup": "popup.html",
    "default_icon": {
      "16": "/images/download_image16.png",
      "32": "/images/download_image32.png",
      "48": "/images/download_image48.png",
      "128": "/images/download_image128.png"
    }
  },
  "icons": {
    "16": "/images/download_image16.png",
    "32": "/images/download_image32.png",
    "48": "/images/download_image48.png",
    "128": "/images/download_image128.png"
  },
  "permissions": [
    "downloads",
    "storage",
    "activeTab",
    "declarativeContent",
    "https://www.zdf.de/",
    "https://api.zdf.de/"
  ],
  "background": {
    "scripts": ["background.js"],
    "persistent": false
  },
  
  "content_security_policy": "script-src 'self' 'unsafe-eval'; object-src 'self'",

  "comment#options_page": "options.html"
}
